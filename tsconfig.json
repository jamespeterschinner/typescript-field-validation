{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "strict": true,                                 
    "noImplicitAny": true,                       
    "strictNullChecks": true,                    
    "strictFunctionTypes": true,                 
    "alwaysStrict": true,                        
    "declaration": true,
    "outDir": "./lib",
    "noUnusedLocals": true,                      
    "noUnusedParameters": true,                                 
    "baseUrl": "./",                                                             
    "rootDirs": ["src"],                            
    "esModuleInterop": true,                    
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
